   <children>
      <Button id="button" fx:id="addHorseDetails" layoutX="98.0" layoutY="200.0" mnemonicParsing="false" onAction="#onAddHorseDetailsButtonClick" stylesheets="@CSS/main.css" text="Add Horse Details" />
